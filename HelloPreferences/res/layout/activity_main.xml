<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/background_portrait"
	android:paddingRight="@dimen/side_padding"
	android:paddingLeft="@dimen/side_padding">

	<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:stretchColumns="*">
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:text="@string/pet_category"
			android:textStyle="bold"
			android:textColor="@color/category_color"
			android:textSize="@dimen/category_font_size"></TextView>
		<View
			android:layout_width="fill_parent"
			android:background="@color/bar_color"
			android:layout_height="@dimen/bar_height"></View>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="left"
				android:text="@string/dog_title"
				android:textColor="@color/title_color"
				android:textSize="@dimen/label_font_size"></TextView>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:id="@+id/do_you_like_dogs"
				android:textColor="@color/preference"
				android:text="@string/no_selection"
				android:textSize="@dimen/selection_font_size"></TextView>
		</TableRow>


		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/cat_title"
				android:textColor="@color/title_color"
				android:textSize="@dimen/label_font_size"></TextView>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:id="@+id/do_you_like_cats"
				android:textColor="@color/preference"
				android:text="@string/no_selection"
				android:textSize="@dimen/selection_font_size"></TextView>
		</TableRow>
		<View
			android:layout_height="@dimen/space_between_categories" />

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/dessert_category"
			android:textStyle="bold"
			android:textColor="@color/category_color"
			android:textSize="@dimen/category_font_size"></TextView>
		<View
			android:layout_width="wrap_content"
			android:background="@color/bar_color"
			android:layout_height="@dimen/bar_height"></View>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/dessert_sdk"
				android:layout_span="2"
				android:textColor="@color/preference"
				android:text="@string/no_selection"
				android:textSize="@dimen/selection_font_size" android:gravity="center"></TextView>

		</TableRow>
		<View
			android:layout_height="@dimen/space_between_categories" />

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/favorite_color_category"
			android:textStyle="bold"
			android:textColor="@color/category_color"
			android:textSize="@dimen/category_font_size"></TextView>
		<View
			android:layout_width="wrap_content"
			android:background="@color/bar_color"
			android:layout_height="@dimen/bar_height"></View>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/favorite_color"
				android:layout_span="2"
				android:textColor="@color/preference"
				android:text="@string/no_selection"
				android:textSize="@dimen/selection_font_size" android:gravity="center"></TextView>
		</TableRow>
		<View
			android:layout_height="@dimen/space_between_categories" />

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textStyle="bold"
			android:textColor="@color/category_color"
			android:text="@string/weekday_title"
			android:textSize="@dimen/category_font_size"></TextView>
		<View
			android:layout_width="wrap_content"
			android:background="@color/bar_color"
			android:layout_height="@dimen/bar_height"></View>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_span="2"
				android:textColor="@color/preference"
				android:text="@string/no_selection"
				android:textSize="@dimen/selection_font_size" android:gravity="center" android:id="@+id/class_days"></TextView>
		</TableRow>
	</TableLayout>
</FrameLayout>
