<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/color_red" />

        <TextView
            android:id="@+id/textView_green"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/color_green" />

        <TextView
            android:id="@+id/textView_yellow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/color_yellow" />

        <TextView
            android:id="@+id/textView_blue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/color_blue" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_row_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/row_one"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView_row_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/row_two"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView_row_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/row_three"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView_row_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/row_four"
        android:textSize="25sp" />

</LinearLayout>